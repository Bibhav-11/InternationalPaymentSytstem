@page
@model RegisterModel
@{
    Layout = "_IdentityLayout";
    ViewData["Title"] = "Register";
}

<div style="min-width: 40%">
    <h1 style="text-align: center">@ViewData["Title"]</h1>

<div class="">
    <div class="">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 style="text-align: center">Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="UserProfileInput.FirstName" class="form-control" aria-required="true" placeholder="Enter First Name" />
                <label class="form-label" asp-for="UserProfileInput.FirstName"></label>
                <span asp-validation-for="UserProfileInput.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="UserProfileInput.MiddleName" class="form-control" aria-required="true" placeholder="Enter Middle Name" />
                <label asp-for="UserProfileInput.MiddleName"></label>
                <span asp-validation-for="UserProfileInput.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="UserProfileInput.LastName" class="form-control" aria-required="true" placeholder="Enter Last Name" />
                <label asp-for="UserProfileInput.LastName"></label>
                <span asp-validation-for="UserProfileInput.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="UserProfileInput.Address" class="form-control" aria-required="true" placeholder="Enter Address" />
                <label asp-for="UserProfileInput.Address"></label>
                <span asp-validation-for="UserProfileInput.Address" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="UserProfileInput.Country" class="form-select" aria-required="true" placeholder="Enter Country">
                    <option value="">Select a Country</option>
                    @foreach (var country in @Model.Countries)
                    {
                        <option value="@country.Id">@country.Name</option>
                    }
                </select>
                <label asp-for="UserProfileInput.Country"></label>
                <span asp-validation-for="UserProfileInput.Country" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 m-0 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
