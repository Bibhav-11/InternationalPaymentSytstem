@model Application.ViewModels.BankDetailsModel

<form id="accountForm">
    <input asp-for="Id" hidden />
    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" asp-for="BankName"></label>
        <span class="text-danger">*</span>
        <input asp-for="BankName" class="form-control"/>
        <span asp-validation-for="BankName" class="text-danger"></span>
    </div>

    <!-- Password input -->
    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" asp-for="BankAccountNumber"></label>
        <span class="text-danger">*</span>
        <input asp-for="BankAccountNumber" class="form-control"/>
        <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
    </div>
</form>